<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/Lg_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Lg_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Lg_Forget"
        android:text="忘记密码"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/Lg_phone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="250dp"
        />

    <Button
        android:id="@+id/Lg_Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20dp"
        android:layout_below="@+id/Lg_password"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/Lg_registered"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="20dp"
        android:layout_below="@+id/Lg_Login"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/Lg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lg_password"
        android:layout_marginTop="150dp"
        android:text="——————使用第三方社交账号登录——————"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lg_text"
        android:layout_toLeftOf="@+id/Lg_img_weixin"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ssdk_oks_classic_sinaweibo"/>
    <ImageButton
        android:id="@+id/Lg_img_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lg_text"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ssdk_oks_classic_wechat" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lg_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/Lg_img_weixin"
        android:background="@drawable/ssdk_oks_classic_qq" />


</RelativeLayout>
