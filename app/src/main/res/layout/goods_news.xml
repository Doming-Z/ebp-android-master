<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:FlyBanner="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>
            <ImageView
                android:id="@+id/news_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/news"
                android:layout_marginLeft="250dp"/>
        </LinearLayout>
        <com.yus.taobaoui.view.FlyBanner
            android:id="@+id/news_bannerTop"
            android:layout_width="350dp"
            android:layout_marginLeft="5dp"
            android:layout_height="200dp"
            FlyBanner:points_position="RIGHT">

        </com.yus.taobaoui.view.FlyBanner>
        <TextView
            android:id="@+id/news_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="商品标题：又大又甜的西瓜，包邮包邮包邮"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_buying_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖点：海南特产/日期新鲜"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/news_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:layout_marginLeft="@dimen/img_20dp"
                />
            <ImageView
                android:id="@+id/news_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collect"
                android:layout_marginLeft="@dimen/img_20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/img_20dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/news_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47.8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="  元"
                android:textSize="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货运："
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/news_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="0.00"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/news_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价(1770)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/img_20dp"/>
                <ImageView
                    android:id="@+id/news_comment_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow02"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/touxiang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名称："
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/news_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天堂之上"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/news_comment"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="水果挺不错的，货运也好，水果到了，包装完好，老板人不错"/>
            <Button
                android:id="@+id/news_Look_comment"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部评论"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/little_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="135dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vertical_line"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品信息"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/news_producing_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="产地：海南"/>
            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="日期：3月份新品"/>

            <TextView
                android:id="@+id/news_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="总库存：1000kg"/>
            <ImageView
                android:id="@+id/news_firstImg"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/xigua"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/news_SecondImg"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/watermelon"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/news_shopping_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="加入购物车"
                    />
                <Button
                    android:id="@+id/news_buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="立即购买"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>